# Development Environment Variables
# Copy this file to .env.local and fill in your values

# N8n Configuration
NEXT_PUBLIC_N8N_BASE_URL=your-n8n-instance-url
NEXT_PUBLIC_N8N_SCHEDULE_ENDPOINT=/webhook/ryanair-schedule
NEXT_PUBLIC_N8N_TASKS_ENDPOINT=/webhook/ryanair-tasks

# JWT Authentication Endpoints (NEW in Issue #4)
NEXT_PUBLIC_N8N_AUTH_ENDPOINT=/webhook/auth/login
NEXT_PUBLIC_N8N_VERIFY_ENDPOINT=/webhook/auth/verify

# Authentication Secret (use a strong password)
NEXT_PUBLIC_APP_SECRET=your-secret-password-here

NEXT_PUBLIC_USE_MOCK_USERS=true